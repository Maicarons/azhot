# 服务器配置
SERVER_HOST=localhost
SERVER_PORT=8080

# 数据库配置
DB_TYPE=sqlite
MYSQL_DSN=root:password@tcp(127.0.0.1:3306)/hot_search?charset=utf8mb4&parseTime=True&loc=Local

# MCP 配置
MCP_STDIO_ENABLED=false
MCP_HTTP_ENABLED=false
MCP_PORT=8081

# 调试模式
DEBUG=false

# CORS 配置
# 允许多个来源的示例: http://localhost:3000,http://localhost:8081,https://yourdomain.com
# 允许所有来源（仅开发环境）: *
CORS_ALLOW_ORIGINS=*